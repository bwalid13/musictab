{
  "manifest_version": 3,
  "name": "MusicTab",
  "version": "1.0",
  "description": "Local MP3 player with iTunes metadata integration. Open a tab to play your music with album covers and artist info.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://itunes.apple.com/*",
    "https://en.wikipedia.org/*",
    "https://*.wikipedia.org/*"
  ],
  "action": {
    "default_title": "Toggle MusicTab Player",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

